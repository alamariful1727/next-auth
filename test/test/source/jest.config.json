{
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx|ts)?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "reporters": [
      "default",
      "jest-junit",
      ["jest-junit", { "suiteName": "Functional Tests" }],
      ["summary", { "summaryThreshold": 1 }]
    ],
    "verbose": true,
    "preset": "jest-puppeteer"
  }